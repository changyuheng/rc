#for i in userdata.img boot.img; do fastboot flash "${i%.*}" "$i"; done

RET="0"
NEED_SIG="1"
if [ ! "$1" ]; then
	cat <<EOF
$0 <image.img ...>
EOF

	RET="1"
	exit "$RET"
fi

while [ "$1" ]; do
	file="$1"
	if [ "${1%.img}" = "$1" ]; then
		echo "$1 is not *.img, skip."
		continue
	fi
	#dirfile="${file%/*}"
	dirfile="`dirname "$file"`"
	#basefile="${file##*/}"
	basefile="`basename "$file"`"
	partition="${basefile%%.*}"
	filefullname="${file%.img}"
	signature="${filefullname}.sig"

	if [ "$NEED_SIG" != "0" ]; then
		if [ -f "$signature" ]; then
			fastboot signature "$signature"
		fi
	fi
	fastboot flash "$partition" "$file"
	ret="$?"
	if [ "$ret" != "0" ]; then
		RET="$ret"
	fi

	shift
done

[ "$RET" = "0" ] && fastboot reboot

