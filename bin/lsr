#!/system/bin/sh
#!/usr/bin/env sh

#
# find -ls
#

# android-ls is not supported -1 -i
l="./"
ls -R "$@" |
while read line; do
	case "$line" in
		*:) # pushd by ':'
			l="${line%:*}/"
			dst="${l}"
			list=`ls -l -d -s "$l"`
			echo -e "${list}\t${dst}"
		;;
		?*)
			dst="${l}${line}"
			list=`ls -l -d -s "${l}${line}"`
			echo -e "${list}\t${dst}"
		;;
		*) # popd by empty line
			l="./"
		;;
	esac
done

