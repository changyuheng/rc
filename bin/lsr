#!/system/bin/sh
#!/usr/bin/env sh

#
# find -ls
#

# android-ls is not supported -1 -i
ls -R "$@" |
while read line; do
	case "$line" in
		*:) # pushd by ':'
			l="${line%:*}"
			dst="${l}"
			#list=`ls -l -d -s "$l"`
			#echo -e "${list}\t${dst}"
		;;
		?*)
			if ls "$l" > /dev/null 2>&1; then
				dst="${l}/${line}"
				list=`ls -l -d -s "${dst}"`
			else
				dst="${line}"
				list=`ls -l -d -s "${line}"`
			fi
			echo -e "${list}\t${dst}"
		;;
		*) # popd by empty line
		;;
	esac
done

