for (( i=0; i < $COUNT; i++ )) ; do
	echo -e "$i: `date -R`"
	adb "$@" shell am start -W -n com.android.camera/.Camera &&
		adb "$@" shell input keyevent 80
		adb "$@" shell input keyevent 27
		sleep 3
		adb "$@" shell input keyevent 4
	#sleep 3
done | tee -a "/tmp/`basename $0`_$$.log"

