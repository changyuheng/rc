#!/usr/bin/env bash
# 很抱歉，無法找到符合 resisters 的結果。以下為 resisters 在字典中的結果。
i=0

[ "$1" ] &&
w3m -dump "http://tw.dictionary.yahoo.com/dictionary?p=${1}" 2>/dev/null |
sed -n '/^字典搜尋/,/^\[s.*\]/p' |
sed -e '/^知識/,$d' -e '/^英語課程快搜/,$d' -e '/^查看全部/,1d' |
sed -e '/^字典搜尋/d' -e '/^\s*Dr/d' -e '/^\s*\^/d' |
uniq -u |
while IFS=: read line; do
	tput setaf "$((i+1))"
	echo "$line"
	tput setaf default

	if [ -z "$line" ]; then
		((i++))
	fi
	i=$((i % 7))
done |
pager -r


# hah
